{
  "name": "cash-program-design-wizard-server",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodekruis/cash-program-design-wizard.git",
    "directory": "server"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "node dist/src/main.js",
    "start:database": "docker-compose up -d --build",
    "start:dev": "npm-run-all --print-label --sequential start:database migration:run start:dev:nest",
    "start:dev:nest": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:no-watch": "nest start",
    "test:all": "npm run lint && npm run test:cov && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --passWithNoTests",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "npm-run-all --print-label --sequential lint:syntax lint:code",
    "test": "npm run lint && npm run test:cov",
    "lint:code": "eslint . --ext .ts",
    "lint:syntax": "prettier --check .",
    "fix:syntax": "npm run lint:syntax -- --write .",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm migration:run"
  },
  "engines": {
    "node": "^16.x",
    "npm": "^8.x"
  },
  "dependencies": {
    "@nestjs/common": "^8.4.0",
    "@nestjs/config": "^1.1.6",
    "@nestjs/core": "^8.4.0",
    "@nestjs/platform-express": "^8.4.0",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/typeorm": "^8.0.3",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.2",
    "csv-parse": "^5.0.4",
    "jsonwebtoken": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.4",
    "swagger-ui-express": "^4.3.0",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.12.0",
    "typeorm": "^0.2.41",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.1",
    "@nestjs/schematics": "^8.0.7",
    "@nestjs/testing": "^8.4.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.x",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
